{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block content %}
<div class="row"> 
  <div class="col-md-3">
     <h3 style="margin-top: 20px;">Filtrer</h3>
     {{ form(form) }}
  </div>

  <div class="col-md-9">
     <h3 style="margin-top: 20px;">Nos Produits</h3>
     <div class="row" style="margin-bottom: 75px;">
       {% for product in products %}
         <div class="col-md-4">
             <div class="text-center" style="margin-top: 50px;">
                <a href ="{{ path('product', { 'slug' : product.slug } ) }}">
                    <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                </a>
                <h5 style=" text-transform: uppercase; font-size: 15px; margin-bottom: 1px;">
                    {{ product.name }}
                </h5>
                <span style=" font-size: 14px; display: block; margin-bottom: 10px;">
                    {{ product.subtitle }}
                </span> 
                <span style="font-size: 15px; font-weight: bold;">
                    {{ (product.price/100) | number_format(2) }} â‚¬
                </span>
             </div>
         
         </div>
       {% endfor %}
      </div>
  </div>
</div>
{% endblock %}
